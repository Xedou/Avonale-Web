@model IEnumerable<Avonale_Web.Models.Repositorio>

<h2>Meus repositórios favoritos</h2>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.name, "Detalhar", "Repositorios", new { filtro = item.name }, null)
                        </td>
                        <td>
                            @item.description
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
